<div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold mb-6">Election Results</h1>
    
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-200">
                <tr>
                    <th class="py-2 px-4 border">Party</th>
                    <th class="py-2 px-4 border">Votes</th>
                </tr>
            </thead>
            <tbody>
                <% candidates.forEach(candidate => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="py-2 px-4 border"><%= candidate.party %></td>
                        <td class="py-2 px-4 border"><%= candidate.count %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div class="mt-8">
        <h2 class="text-xl font-semibold mb-4">Winner</h2>
        <% if (candidates.length > 0) { %>
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4">
                <p class="font-bold"><%= candidates[0].party %></p>
                <p>with <%= candidates[0].count %> votes</p>
            </div>
        <% } else { %>
            <p>No results available</p>
        <% } %>
    </div>
</div>